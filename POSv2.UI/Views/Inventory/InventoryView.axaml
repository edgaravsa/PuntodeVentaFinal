<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="POSv2.UI.Views.Inventory.InventoryView">
  <StackPanel Margin="32" Spacing="20">
    <TextBlock Text="Inventario" FontSize="28" FontWeight="Bold" Margin="0,0,0,18"/>
    <StackPanel Orientation="Horizontal" Spacing="32">
      <!-- Listado de productos -->
      <StackPanel Width="500">
        <TextBox Watermark="Buscar producto..." FontSize="18" Height="36" Margin="0,0,0,8"/>
        <ListBox Items="{Binding Products}" SelectedItem="{Binding SelectedProduct, Mode=TwoWay}" Height="520">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal" Spacing="12">
                <TextBlock Text="{Binding Name}" FontSize="18" Width="120"/>
                <TextBlock Text="{Binding SKU}" FontSize="16" Width="80"/>
                <TextBlock Text="{Binding Quantity}" FontSize="16" Width="60"/>
                <TextBlock Text="{Binding Category}" FontSize="16" Width="80"/>
              </StackPanel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
      </StackPanel>
      <!-- Ajuste de inventario -->
      <StackPanel Width="420">
        <TextBlock Text="Ajuste de inventario" FontSize="20" FontWeight="SemiBold"/>
        <TextBlock Text="Producto seleccionado:" FontWeight="SemiBold"/>
        <TextBlock Text="{Binding SelectedProduct.Name}" FontSize="18" Height="36"/>
        <TextBlock Text="Cantidad actual:" FontWeight="SemiBold"/>
        <TextBlock Text="{Binding SelectedProduct.Quantity}" FontSize="18" Height="36"/>
        <TextBlock Text="Ajuste (+/-):" FontWeight="SemiBold"/>
        <NumericUpDown Value="{Binding StockAdjustment, Mode=TwoWay}" FontSize="18" Height="36" Minimum="-9999" Maximum="9999"/>
        <TextBlock Text="Motivo:" FontWeight="SemiBold"/>
        <TextBox Text="{Binding AdjustmentReason, Mode=TwoWay}" FontSize="18" Height="36"/>
        <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,16,0,0">
          <Button Content="Aplicar ajuste" Command="{Binding AdjustStockCommand}" FontSize="18" Height="44" IsEnabled="{Binding SelectedProduct, Converter={StaticResource NullToBoolConverter}}"/>
          <Button Content="Limpiar" Command="{Binding ClearAdjustmentCommand}" FontSize="18" Height="44"/>
        </StackPanel>
      </StackPanel>
    </StackPanel>
  </StackPanel>
</UserControl>